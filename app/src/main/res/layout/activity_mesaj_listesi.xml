<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/activity_topbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50px"
            android:paddingTop="20px"
            android:text="Cache Number:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextCacheNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="50px"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="50px"
            android:text="+393792530897" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50px"
            android:paddingTop="10px"
            android:text="ICCID1:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="50px"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="50px" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50px"
            android:paddingTop="10px"
            android:text="Phone1:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="50px"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10px" />

        <Button
            android:id="@+id/button1Send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1 SLOT  -> TG" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50px"
            android:paddingTop="10px"
            android:text="ICCID2:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="50px"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="50px" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50px"
            android:paddingTop="10px"
            android:text="Phone2:"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText2_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="50px"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="50px" />

        <Button
            android:id="@+id/button2Send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 SLOT -> TG" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:paddingTop="10px" />

        <Button
            android:id="@+id/buttonRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="READ"
            android:textColorHighlight="#3F51B5"
            android:textColorLink="#3F51B5"
            android:theme="@style/MaterialAlertDialog.Material3" />
    </LinearLayout>


</LinearLayout>